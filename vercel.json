{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "framework": "vite",
  "builds": [
    {
      "src": "api/handler.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|gif|svg|ico|json))",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/handler.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 